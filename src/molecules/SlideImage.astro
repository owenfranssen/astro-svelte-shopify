---
const { content } = Astro.props;
---
<div class:list={["relative py-32 px-6 sm:py-40 sm:px-12 lg:px-16", content.background_colour]}>
  <div class="absolute inset-0 overflow-hidden">
    <img src={content.image} alt={content.title} class="h-full w-full object-cover object-center rounded-md">
  </div>
  <div aria-hidden="true" class="absolute inset-0 bg-gray-900 bg-opacity-50 rounded-md"></div>
  <div class="relative mx-auto flex max-w-3xl flex-col items-center text-center">
    <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">{ content.title }</h2>
    { content.subtitle != '' && (<p>{ content.subtitle }</p>)}
    { content.paragraph != '' && (<p class="mt-3 text-xl text-white">{ content.paragraph }</p>) }
    { content.button_text != '' && (<a href={ content.button_link } class="mt-8 block w-full rounded-md border border-transparent bg-white py-3 px-8 text-base font-medium text-gray-900 hover:bg-gray-100 sm:w-auto">{ content.button_text }</a> )}
  </div>
</div>
