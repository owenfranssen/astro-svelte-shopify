---
import LayoutIndex from '../templates/Layout-index.astro';

import Banner from '../organisms/Banner.astro';
import Carousel from '../organisms/Carousel.astro';
import Collections from '../organisms/Collections.astro';
import LogoCloud from '../organisms/LogoCloud.astro';
import Instagram from '../organisms/Instagram.astro';
---
<LayoutIndex title="Welcome to Astro.">
	<main>
    <!-- <Shopify /> -->
    <ul class="flex justify-center py-4 space-x-8">
      <li><a href="products/chevron/">Sample product - Chevron T</a></li>
      <li><a href="products/5-panel-hat/">Sample product - 5 Panel Hat</a></li>
      <li><a href="collections/sample/">Sample collection</a></li>
      <li><a href="collections/frontpage/">Frontpage collection</a></li>
    </ul>

    <Banner>
      Hero
    </Banner>

    <Carousel collection="frontpage" limit=4>
      Best sellers
    </Carousel>

    <Collections collections={['apparel', 'tools', 'accessories']}>
      Collections
    </Collections>

    <LogoCloud brands={['united-by-blue', 'ursa-major', 'snow-peak']} />

    <Instagram>
      instagram feed
    </Instagram>

	</main>
</LayoutIndex>

<style>
  main {
    @apply pt-32;
  }
</style>
