---
import { getCollectionDetails } from '../routes/api/get-collection-details.json';
import { getProductsByTag } from '../routes/api/get-products-by-tag.js';
import { collectionUrl, productUrl } from '../routes/api/utils/makeUrl.js';
import Image from '../atoms/Image.astro';

import 'keen-slider/keen-slider.min.css';

const { handle, limit, title } = Astro.props as Props;

const query = `tag:'collection:${handle}'`,
	collection_details = getCollectionDetails(handle),
	products = await getProductsByTag(query, +limit),
	collection = { ...collection_details, products: products.edges };
---
<section>
  <div class="bg-white">
    <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="md:flex md:items-center md:justify-between">
        <h2 class="text-2xl font-extrabold tracking-tight text-gray-900">{ title }</h2>
        <a href={collectionUrl(handle)} class="hidden text-sm font-medium text-primary hover:text-indigo-500 md:block">More { title.toLowerCase() }<span aria-hidden="true"> &rarr;</span></a>
      </div>

      <div class="keen-slider mt-6 grid grid-cols-2 gap-x-4 gap-y-10 sm:gap-x-6 md:grid-cols-4 md:gap-y-0 lg:gap-x-8">
        { collection?.products.map( product => {
          product = product.node;
          return <div class="group relative">
            <div class="w-full h-56 bg-gray-200 rounded-md overflow-hidden group-hover:opacity-75 lg:h-72 xl:h-80">
              <a href={productUrl(product.handle)}>
                <Image image={product.featuredImage} cssClass="w-full h-full object-center object-cover" />
              </a>
            </div>
            <h3 class="mt-4 text-sm text-gray-700">
              <a href={productUrl(product.handle)}>
                <span class="absolute inset-0"></span>
                {product.title}
              </a>
            </h3>
            <p class="mt-1 text-sm text-gray-500">Natural</p>
            <p class="mt-1 text-sm font-medium text-gray-900">
              {/*<Price price={product.priceRange} compare={product.compareAtPriceRange} />*/}
            </p>
          </div>
        }) }
      </div>

      <div class="mt-8 text-sm md:hidden">
        <a href="#" class="font-medium text-primary hover:text-indigo-500">More { title.toLowerCase() }<span aria-hidden="true"> &rarr;</span></a>
      </div>
    </div>
  </div>
</section>

